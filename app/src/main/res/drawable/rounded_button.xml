<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- צבע הרקע של הכפתור -->
    <solid android:color="#F2B841" />

    <!-- גבול (אם יש צורך) -->
    <stroke
        android:width="2dp"
        android:color="#000000" />

    <!-- עיגול פינות -->
    <corners android:radius="16dp" />

    <!-- גודל פנימי -->
    <padding
        android:left="16dp"
        android:top="16dp"
        android:right="16dp"
        android:bottom="16dp" />
</shape>
